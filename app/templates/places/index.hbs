<h1>Places list</h1>

<p>
  {{link-to "New Place" "places.new" }}
</p>

{{#if model.length}}
  <table>
    <thead>
      <tr>
        <th>
          Name
        </th>
        <th>
          Country
        </th>
        <th colspan="3">
          Actions
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |place|}}
        <tr>
          <td>
            {{place.name}}
          </td>
          <td>
            {{place.country}}
          </td>
          <td>
            {{link-to "Edit" "places.edit" place}}
          </td>
          <td>
            {{link-to "Show" "places.show" place}}
          </td>
          <td>
            <a href="#" {{action "remove" place}}>Remove</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p id="blankslate">
    No Places found
  </p>
{{/if}}
